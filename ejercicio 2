USE sakila;
-- 1
SELECT f.title, f.special_features FROM film f WHERE rating='PG-13';
-- 2
SELECT DISTINCT f.LENGTH FROM film f ORDER BY f.`length`;
-- 3
SELECT f.title, f.rental_rate, replacement_cost FROM film f WHERE replacement_cost BETWEEN 20.00 AND 24.00;
-- 4
SELECT f.title, c.name, f.rating FROM film f, film_category fc, category c WHERE fc.film_id = f.film_id  AND fc.category_id = c.category_id AND special_features="Behind the Scenes";
-- 5
SELECT a.first_name, a.last_name FROM film f, film_actor fa, actor a WHERE f.film_id = fa.film_id AND fa.actor_id = a.actor_id AND f.title = 'ZOOLANDER FICTION';
-- 6
SELECT a.address, c.city, co.country FROM address a, city c, country co, store s WHERE s.address_id = a.address_id AND a.city_id = c.city_id AND c.country_id = co.country_id AND s.store_id = 1;
-- 7
SELECT t1.title, t2.title, t1.rating FROM film t1, film t2 WHERE t1.rating=t2.rating AND t1.film_id <> t2.film_id;
-- 8
SELECT DISTINCT title, staff.first_name, staff.last_name FROM film, inventory, store, staff WHERE store.store_id=2 AND film.film_id = inventory.film_id AND inventory.store_id = store.store_id AND store.store_id = staff.store_id;


